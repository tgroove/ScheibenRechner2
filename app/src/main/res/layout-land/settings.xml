<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/custom_dialog_layout_design_config" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical" >
        <net.herch.thorsten.scheibenrechner2.DrawingView
            android:id="@+id/drawing_config_scheibe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#FFFF00FF" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:layout_margin="15dp"
            android:orientation="vertical" >

            <TextView
                android:text="Felder pro Seite"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewFelder" />
            <Spinner
                android:id="@+id/spinner_felder"
                android:layout_width="wrap_content"
                android:entries="@array/FelderProSeite"
                android:layout_height="wrap_content" />


            <TextView
                android:text="Gestaltung"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewGestalt" />
            <Spinner
                android:id="@+id/spinner_scheiben_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/Scheiben_Layouts" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
